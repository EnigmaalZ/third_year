@using ex03.Models;
@model TraiteGet
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="../../StyleSheet/StyleSheet1.css" rel="stylesheet" />
    <script>
        function loadScriptAfterDOMReady() {
            var script = document.createElement('script');
            script.src = "\\script\\Script.js";
            document.head.appendChild(script);

            script.onload = function () { document.removeEventListener('DOMContentLoaded', loadScriptAfterDOMReady); };
        }
        document.addEventListener('DOMContentLoaded', loadScriptAfterDOMReady);

    </script>
</head>
<body>
    <div id="entete">
        <img src="~/img/html5250.png" />
        <h1>HTML5</h1>
    </div>
    <div id="menuTop"><ul><li><a href="#">Produits</a></li><li><a href="#">XXXXXX</a></li><li><a href="#">XXXXXX</a></li><li><a href="#">Societe</a></li></ul></div>
    <div id="button">
        <input type="button" value="Toggle" id="btStart" />
        <input type="button" value="Reset" id="btResetBackground" />
    </div>
    <div id="conteneurForm">
        <form name="identification" id="monForm" action="~/home/Index" enctype="multipart/form-data" method="post">
            <label id="pseudo">Pseudonyme : <input name="pseudo" id="ipseudo" type="text" placeholder="@Model.pseudo" /></label>
            <label id="passwd">Password : <input name="passwd" id="ipasswd" type="text" placeholder="@Model.passwd" /></label>
            <label id="bornDate">Date de naissance : <input id="ibornDate" name="bornDate" type="text" value="@Model.bornDate" /></label>
            <!--
            Avec dateTime par defaut sur le jour en cours
            <label id="bornDate">Date de naissance : <input name="bornDate" type="date" value="@*DateTime.Today.ToString( "dd-MM-yyyy" )*@" required /></label>
            -->
            <div id="contButton">
                <input type="reset" value="Reset" id="resetForm" />
                <input type="submit" value="Send" id="sendButton" />
            </div>
        </form>
    </div>
</body>
</html>