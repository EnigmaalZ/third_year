<Window x:Class="Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binding"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <SolidColorBrush x:Key="uniqueCle" Color="red"></SolidColorBrush>
    </Window.Resources>
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Name="lbNom" Foreground="{StaticResource ResourceKey=uniqueCle}">Nom : </Label>
            <TextBox Name="Nom"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Name="lbPrenom" Foreground="{StaticResource ResourceKey=uniqueCle}">Prénom : </Label>
            <TextBox Name="Prenom"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Name="lbTel" Foreground="{StaticResource ResourceKey=uniqueCle}">Tél : </Label>
            <TextBox Name="Telephone"></TextBox>
        </StackPanel>
    </StackPanel>
</Window>
